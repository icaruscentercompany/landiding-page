    <script>
        // Contador Regressivo
        function updateCountdown() {
            const now = new Date();
            const endTime = new Date(now.getTime() + 3 * 60 * 60 * 1000); // 3 horas
            
            const totalSeconds = Math.floor((endTime - now) / 1000);
            
            if (totalSeconds < 0) {
                document.getElementById('countdown').innerHTML = 
                    '<div style="color:#dc2626; font-weight:800; font-size:20px;">OFERTA ENCERRADA</div>';
                document.querySelectorAll('.btn').forEach(btn => {
                    btn.innerHTML = '‚è∞ OFERTA EXPIRADA';
                    btn.style.background = '#94a3b8';
                    btn.style.cursor = 'not-allowed';
                    btn.onclick = (e) => {
                        e.preventDefault();
                        alert('Esta oferta expirou. Entre em contato para verificar disponibilidade.');
                    };
                });
                return;
            }
            
            const hours = Math.floor(totalSeconds / 3600);
            const minutes = Math.floor((totalSeconds % 3600) / 60);
            const seconds = totalSeconds % 60;
            
            document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
            document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
            document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            
            // Efeito de urg√™ncia
            if (totalSeconds < 1800) { // 30 minutos
                document.querySelectorAll('.countdown-item').forEach(item => {
                    item.style.animation = 'pulse 0.5s infinite';
                });
            }
        }
        
        setInterval(updateCountdown, 1000);
        updateCountdown();
        
        // Header scroll effect
        window.addEventListener('scroll', function() {
            const header = document.getElementById('siteHeader');
            if (window.scrollY > 50) {
                header.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.15)';
            } else {
                header.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.1)';
            }
        });
        
        // Ano atual no footer
        document.getElementById('year').textContent = new Date().getFullYear();
        
        // Tracking de cliques
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('click', function() {
                if(typeof fbq !== 'undefined') {
                    fbq('track', 'InitiateCheckout', {
                        value: 49.99,
                        currency: 'BRL',
                        content_name: 'M√©todo ENEM Estrat√©gico'
                    });
                }
                
                // Salva o interesse do usu√°rio
                localStorage.setItem('enem_interest', new Date().toISOString());
            });
        });
        
        // Monitora tempo na p√°gina
        let startTime = Date.now();
        window.addEventListener('beforeunload', function() {
            const timeSpent = Math.floor((Date.now() - startTime) / 1000);
            if(timeSpent > 60) { // Mais de 1 minuto
                console.log('Usu√°rio gastou', timeSpent, 'segundos na p√°gina');
            }
        });
        
        // Scroll suave
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                if(this.getAttribute('href') === '#') return;
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if(target) {
                    window.scrollTo({
                        top: target.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        console.log('‚úÖ P√°gina otimizada para vendas carregada!');
        console.log('üí∞ Pre√ßo: R$ 49,99');
        console.log('üîó Link de vendas: https://pay.cakto.com.br/55obt3d_749212');
